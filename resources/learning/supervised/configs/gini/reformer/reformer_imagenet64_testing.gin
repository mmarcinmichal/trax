import trax.data
import trax.layers
import trax.models
import trax.optimizers
import trax.learning.training.trainer

# Parameters that will vary between experiments:
# ==============================================================================
train.model = @trax.models.ReformerLM
attn_type = @LSHSelfAttention
attn_kv = 64
n_layers = 2

# Parameters for make_inputs:
# ==============================================================================
make_inputs.train_stream = [
  @data.tf_dataset_streams_train(),
  @train/data.BucketByLengthFromBatcher(),
  @data.AddLossWeights(),
]

make_inputs.eval_stream = [
  @data.tf_dataset_streams_eval(),
  @eval/data.BucketByLengthFromBatcher(),
  @data.AddLossWeights(),
]

# Parameters for data streams:
# ==============================================================================
tf_dataset_streams_train.datasets = @data.data_streams
tf_dataset_streams_eval.datasets = @data.data_streams
tf_dataset_streams_train.input_name = 'targets'
tf_dataset_streams_eval.input_name = 'targets'

# Parameters for BucketByLengthFromBatcher:
# ==============================================================================
train/data.BucketByLengthFromBatcher.training = True
eval/data.BucketByLengthFromBatcher.training = False
train/data.BucketByLengthFromBatcher.batch_size_per_device = 4
eval/data.BucketByLengthFromBatcher.batch_size_per_device = 4
train/data.BucketByLengthFromBatcher.eval_batch_size = 4
eval/data.BucketByLengthFromBatcher.eval_batch_size = 4
train/data.BucketByLengthFromBatcher.max_eval_length = 12288  # 64 * 64 * 3
eval/data.BucketByLengthFromBatcher.max_eval_length = 12288  # 64 * 64 * 3
train/data.BucketByLengthFromBatcher.buckets = ([12288,], [4, 4])
eval/data.BucketByLengthFromBatcher.buckets = ([12288,], [4, 4])
# Parameters for data_streams:
# ==============================================================================
data_streams.data_dir = None
data_streams.dataset_name = 't2t_image_imagenet64_gen_flat_rev'
tf_dataset_streams.input_name = 'targets'

# Parameters for multifactor:
# ==============================================================================
trax.learning.supervised.lr_schedules.multifactor.constant = 0.00035
trax.learning.supervised.lr_schedules.multifactor.factors = 'constant * linear_warmup * cosine_decay'
trax.learning.supervised.lr_schedules.multifactor.warmup_steps = 8000
trax.learning.supervised.lr_schedules.multifactor.steps_per_cycle = 50000


# Parameters for Adam:
# ==============================================================================
Adam.weight_decay_rate=0.0
Adam.b1 = 0.9
Adam.b2 = 0.98
Adam.eps = 1e-9

# Parameters for train:
# ==============================================================================
train.eval_frequency = 500
train.eval_steps = 64
# train.model: see top
train.optimizer = @trax.optimizers.Adam
train.steps = 50000

# Parameters for LSHSelfAttention:
# ==============================================================================
LSHSelfAttention.attention_dropout = 0.2
LSHSelfAttention.chunk_len = 128
LSHSelfAttention.n_buckets = 192
LSHSelfAttention.n_chunks_after = 0
LSHSelfAttention.n_chunks_before = 1
LSHSelfAttention.n_hashes = 2
LSHSelfAttention.n_parallel_heads = 1
LSHSelfAttention.predict_drop_len = 256
LSHSelfAttention.predict_mem_len = 12288

# Parameters for ReformerLM:
# ==============================================================================
ReformerLM.attention_type = %attn_type
ReformerLM.d_attention_key = %attn_kv
ReformerLM.d_attention_value = %attn_kv
ReformerLM.d_model = 1024
ReformerLM.d_ff = 1024
ReformerLM.dropout = 0.0
ReformerLM.ff_activation = @trax.layers.FastGelu
ReformerLM.ff_chunk_size = 6144
ReformerLM.max_len = 12288  # 64 * 64 * 3
ReformerLM.mode = 'train'
ReformerLM.n_heads = 4
ReformerLM.n_layers = %n_layers
ReformerLM.vocab_size = 256
ReformerLM.pos_axial_shape = (64, 64, 3)
ReformerLM.pos_d_axial_embs= (384, 384, 256)

# Parameters for train inputs:
# ==============================================================================
train.inputs = @trax.data.make_inputs

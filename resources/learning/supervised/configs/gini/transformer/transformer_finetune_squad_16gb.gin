import trax.data
include 'resources/learning/supervised/configs/gini/transformer/transformer_c4_pretrain_16gb_adafactor.gin'


# Parameters for train:
# ==============================================================================
# This should always be overriden since this is relative to the pre-trained
# checkpoint.
train.steps = 262144


# Parameters for make_streams:
# ==============================================================================
make_streams.train_stream = [
  @train/data.TFDS(),
  @data.GenericTextPreprocess(),
  @data.Shuffle(),
  @train/data.BucketByLengthFromBatcher(),
  @data.AddLossWeights(),
]

make_streams.eval_stream = [
  @eval/data.TFDS(),
  @data.GenericTextPreprocess(),
  @data.Shuffle(),
  @eval/data.BucketByLengthFromBatcher(),
  @data.AddLossWeights(),
]

# Parameters for BucketByLengthFromBatcher:
# ==============================================================================
train/data.BucketByLengthFromBatcher.training = True
eval/data.BucketByLengthFromBatcher.training = False
train/data.BucketByLengthFromBatcher.buckets = ([513,], [8, 8])
eval/data.BucketByLengthFromBatcher.buckets = ([513,], [8, 8])
train/data.BucketByLengthFromBatcher.buckets_include_inputs_in_length = True
eval/data.BucketByLengthFromBatcher.buckets_include_inputs_in_length = True
train/data.BucketByLengthFromBatcher.strict_pad_on_len = True
eval/data.BucketByLengthFromBatcher.strict_pad_on_len = True
# Parameters for multifactor:
# ==============================================================================
multifactor.factors = 'constant'
multifactor.constant = 0.001


# Parameters for TFDS:
# ==============================================================================
train/data.TFDS.dataset_name = 'squad/plain_text:1.0.0'
train/data.TFDS.data_dir = None
train/data.TFDS.train = True
eval/data.TFDS.dataset_name = 'squad/plain_text:1.0.0'
eval/data.TFDS.data_dir = None
eval/data.TFDS.train = False


# Parameters for GenericTextPreprocess:
# ==============================================================================
GenericTextPreprocess.spm_path = 'gs://t5-data/vocabs/cc_all.32000/sentencepiece.model'
GenericTextPreprocess.text_preprocess_fns = [
    @data.SquadTextPreprocess()
]
GenericTextPreprocess.token_preprocess_fns = [
    @data.AddEOS()
]


# Parameters for SquadTextPreprocess:
# ==============================================================================
SquadTextPreprocess.include_context = True

# Parameters for train inputs:
# ==============================================================================
train.inputs = @trax.data.make_streams
